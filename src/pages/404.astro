---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found | Rishi Mishra" description="The page you're looking for doesn't exist.">
  <main class="min-h-screen flex items-center justify-center px-6">
    <div class="text-center">
      <h1 class="text-8xl font-bold text-white/10 select-none">404</h1>
      <h2 class="text-2xl font-semibold text-white mt-4">Page Not Found</h2>
      <p class="text-white/60 mt-2 max-w-md mx-auto">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a 
        href="/" 
        class="inline-flex items-center gap-2 mt-8 px-6 py-3 bg-white/5 hover:bg-white/10 border border-white/10 hover:border-white/20 rounded-lg text-white transition-all duration-300"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to Home
      </a>
    </div>
  </main>
</Layout>

<style>
  h1 {
    text-shadow: 0 0 80px rgba(255, 255, 255, 0.1);
  }
</style>
